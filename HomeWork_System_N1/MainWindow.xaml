<Window x:Class="HomeWork_System_N1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeWork_System_N1"
        mc:Ignorable="d"
        Title="List of processes" Height="450" Width="800" FontSize="20">
    <ScrollViewer>
        <StackPanel Orientation="Vertical">
            <!-- Control Panel -->
            <StackPanel Orientation="Horizontal">
                <Button x:Name="manualUpdate" Content="Обновить вручную" Margin="10" Click="manualUpdate_Click"/>
                <Button x:Name="AutoUpdate" Content="Включить автообновление" Margin="10" Click="AutoUpdate_Click"/>
            </StackPanel>
            <!-- List of processes -->
            <StackPanel>
                <ListBox x:Name="ProcessList" SelectionChanged="ProcessList_SelectionChanged"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>
